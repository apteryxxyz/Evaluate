{
  "extends": "ts-config-apteryx",
  "include": ["src/**/**/*", "scripts/**/*", ".next/types/**/*.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
      "@/app/*": ["./src/app/[locale]/*"],
      "translations": ["./.translations"],
      "translations/*": ["./.translations/*"],
      "contentlayer/generated": ["./.contentlayer/generated"]
    },
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": ["node_modules"]
}
