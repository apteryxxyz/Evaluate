{
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true
  },
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#2fc186",
    "titleBar.activeForeground": "#fff",
    "activityBarBadge.background": "#2fc186",
    "activityBarBadge.foreground": "#fff"
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit"
  },
  "cSpell.language": "en-GB",
  "cSpell.words": [
    "analyzer",
    "apteryx",
    "autocapture",
    "biomejs",
    "carbonara",
    "clsx",
    "CSUI",
    "darkreader",
    "dialog",
    "formatjs",
    "geist",
    "gtag",
    "hookform",
    "japi",
    "Lexer",
    "lexure",
    "lucide",
    "messageformat",
    "pageleave",
    "pageview",
    "pako",
    "plasmo",
    "plasmohq",
    "popover",
    "posthog",
    "prismjs",
    "runtimes",
    "shadcn",
    "sonner",
    "tailwindcss",
    "tspaths",
    "tsup"
  ],
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "preClassName",
    "textareaClassName"
  ],
  "tailwindCSS.experimental.configFile": "./packages/react/tailwind.config.cjs"
}
