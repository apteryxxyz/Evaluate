{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "format": {
      "dependsOn": ["^format"],
      "inputs": ["src/**"],
      "outputs": ["src/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["src/**"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["src/**", "test/**"]
    },
    "check": {
      "dependsOn": ["^check"],
      "inputs": ["src/**", "test/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "dictionaries/*"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        ".plasmo/**",
        "build/**"
      ]
    },
    "everything": {
      "dependsOn": ["format", "lint", "check", "build", "test"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
