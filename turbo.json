{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "format": {
      "dependsOn": ["^format"],
      "inputs": ["src/**"],
      "outputs": ["src/**"]
    },
    "lint": {
      "dependsOn": ["format", "^lint"],
      "inputs": ["src/**"]
    },
    "test": {
      "dependsOn": ["lint", "build", "^test"],
      "inputs": ["src/**", "test/**"]
    },
    "check": {
      "dependsOn": ["^check"],
      "inputs": ["src/**", "test/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "dictionaries/*.json"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        ".plasmo/**",
        "build/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
