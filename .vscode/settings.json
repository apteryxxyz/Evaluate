{
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true
  },
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#2fc186",
    "titleBar.activeForeground": "#fff",
    "activityBarBadge.background": "#2fc186",
    "activityBarBadge.foreground": "#fff"
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit"
  },
  "cSpell.language": "en-GB",
  "cSpell.words": [
    "apteryx",
    "buape",
    "codemirror",
    "deleteable",
    "dialog",
    "hookform",
    "lucide",
    "pako",
    "plasmo",
    "popover",
    "posthog",
    "ratelimit",
    "ratelimiter",
    "renameable",
    "resolvables",
    "runtimes",
    "tanstack",
    "trpc",
    "uploadable",
    "upstash"
  ],
  "tailwindCSS.classAttributes": ["class", "className"],
  "tailwindCSS.experimental.configFile": "./packages/react/tailwind.config.cjs",
  "typescript.tsdk": "node_modules/typescript/lib"
}
