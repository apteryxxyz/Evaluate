{
  "extends": "ts-config-apteryx",
  "include": ["src/**/**/*", "cli/**/*", ".next/types/**/*.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
      "@cli/*": ["./cli/*"],
      "translations": ["./.translations"]
    },
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": ["node_modules"]
}
