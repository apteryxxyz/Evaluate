{
  "name": "@evaluate/browser-extension",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "format": "biome format src --write",
    "lint": "biome lint src",
    "check": "tsc --noEmit",
    "dev": "plasmo dev",
    "build": "pnpm run \"/^build:.*/\"",
    "build:chrome": "plasmo build --target=chrome-mv3 --zip",
    "build:firefox": "plasmo build --target=firefox-mv3 --zip",
    "build:edge": "plasmo build --target=edge-mv3 --zip"
  },
  "dependencies": {
    "@evaluate/analytics": "workspace:^",
    "@evaluate/compress": "workspace:^",
    "@evaluate/execute": "workspace:^",
    "@evaluate/languages": "workspace:^",
    "@evaluate/react": "workspace:^",
    "@evaluate/translate": "workspace:^",
    "@plasmohq/storage": "^1.9.0",
    "framer-motion": "^10.17.9",
    "lodash": "^4.17.21",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.7",
    "@types/react": "^18.2.47",
    "autoprefixer": "^10.4.16",
    "plasmo": "^0.84.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1"
  },
  "manifest": {
    "name": "Evaluate - Execute Any Code, Any Where",
    "host_permissions": ["https://*/*"],
    "permissions": ["activeTab", "tabs", "scripting"]
  }
}
