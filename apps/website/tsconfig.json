{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "~/*": ["src/*"],
      "~/app/*": ["src/app/[locale]/*"]
    },
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "lib": ["dom", "es2023"]
  }
}
