{
  "extends": "../../tsconfig.base.json",
  "include": [".plasmo/index.d.ts", "src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "paths": { "~*": ["src/*"] },
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "lib": ["DOM", "ES2023"]
  }
}
