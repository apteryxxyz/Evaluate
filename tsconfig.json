{
    "extends": "ts-config-apteryx",
    "include": ["src", "**/*.ts", "mikro-orm.config.js"],
    "exclude": ["node_modules", "build"],
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build",
        "lib": ["esnext", "dom"],
        "moduleResolution": "node",
        "paths": {
            "&classes/*": ["./src/classes/*"],
            "&entities/*": ["./src/entities/*"],
            "&preconditions/*": ["./src/preconditions/*"],
            "&services/*": ["./src/services/*"],
            "&factories/*": ["./src/utilities/factories/*"],
            "&functions/*": ["./src/utilities/functions/*"]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true
    }
}
